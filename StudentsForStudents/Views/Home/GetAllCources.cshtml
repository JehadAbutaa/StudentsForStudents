    /* Style for the Popular Course Section */
.popular-course-area {
  background-color: #ffffff;
  padding: 50px 0;
}

.single-popular-course {
  background-color: #fff;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.single-popular-course:hover {
  transform: translateY(-10px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.single-popular-course .thumb {
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.single-popular-course .thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.single-popular-course .details {
  padding: 20px;
  position: relative;
}

.single-popular-course .details h4 {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}

.single-popular-course .details .name {
  font-size: 14px;
  font-weight: 600;
  color: #777;
}

.single-popular-course .details .value {
  font-size: 16px;
  font-weight: bold;
  color: #e74c3c;
}

.single-popular-course .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.single-popular-course .bottom .list {
  display: flex;
  margin: 0;
  padding: 0;
}

.single-popular-course .bottom .list li {
  margin-right: 5px;
}

.single-popular-course .bottom .list li a {
  color: #f1c40f;
}

.single-popular-course .bottom p {
  font-size: 14px;
  color: #777;
}

.single-popular-course .bottom .ml-20 {
  margin-left: 20px;
}

/* For mobile responsiveness */
@@media (max-width: 768px) {
  .single-popular-course .thumb {
    height: 150px;
  }

  .single-popular-course .details {
    padding: 15px;
  }
}
.registration-area {
