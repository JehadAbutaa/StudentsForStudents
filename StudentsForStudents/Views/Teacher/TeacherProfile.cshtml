@model StudentsForStudents.Models.Teacher
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>

    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        /* Header Styling */
        header {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            color: white;
            padding: 20px;
            text-align: center;
            position: relative;
            width: 100%;
        }

            header h1 {
                margin: 0;
            }

            header nav ul {
                list-style: none;
                padding: 0;
                display: flex;
                justify-content: center;
                margin: 0;
            }

                header nav ul li {
                    display: inline;
                    margin-right: 15px;
                }

                    header nav ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 1.1em;
                    }

                        header nav ul li a:hover {
                            color: #fff;
                            text-decoration: underline;
                        }

            /* Mobile Navbar (Hamburger Menu) */
            header .menu-toggle {
                display: none;
                position: absolute;
                top: 20px;
                right: 20px;
                font-size: 2em;
                cursor: pointer;
            }

            header nav ul {
                display: flex;
            }

                header nav ul li {
                    margin: 0 15px;
                }

                    header nav ul li a {
                        font-size: 1.1em;
                    }

        /* Footer Styling */
        footer {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            color: white;
            text-align: center;
            padding: 10px;
            width: 101%; /* Ensure footer takes full width */
            margin-bottom: auto;
        }

        /* Dashboard Layout */
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
        }

        .dashboard-container {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 20%;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-right: 20px; /* Prevent content from touching sidebar */
        }

            .sidebar h2 {
                color: #7c32ff;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin: 15px 0;
                }

                    .sidebar ul li a {
                        color: #333;
                        text-decoration: none;
                        font-size: 1.1em;
                    }

                        .sidebar ul li a:hover {
                            color: #7c32ff;
                        }

        /* Main Content Styling */
        .dashboard-main {
            width: 75%;
        }

            .dashboard-main h2 {
                color: #7c32ff;
            }

        /* Courses Section */
        .courses-section ul {
            list-style: none;
            padding: 0;
        }

            .courses-section ul li {
                background-color: #fff;
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

        /* Appointments Table */
        .appointments-table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .appointments-table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #7c32ff;
            color: white;
        }

        .cancel-btn {
            background-color: #e74c3c;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .cancel-btn:hover {
                background-color: #c0392b;
            }

        /* Schedule Form Styling */
        .schedule-form input {
            display: block;
            margin: 10px 0;
            padding: 10px;
            width: 70%;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .schedule-form button {
            background: linear-gradient(390deg, #7c32ff 0%, #c738d8 100%);
            color: white;
            cursor: pointer;
            padding: 10px 20px;
        }

            .schedule-form button:hover {
                background-color: #5b26cc;
            }

        /* Responsive Styles */

        /* Mobile View */
        @@media (max-width: 768px) {
            header h1 {
                font-size: 1.5em;
            }
            /* Show the menu toggle (hamburger) icon */
            header .menu-toggle {
                display: block;
            }
            /* Stack the menu items vertically */
            header nav ul {
                display: none;
                flex-direction: column;
                background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
                position: absolute;
                top: 60px;
                right: 0;
                width: 100%;
                padding: 20px;
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            }

                header nav ul li {
                    margin: 10px 0;
                    text-align: center;
                }

                    header nav ul li a {
                        font-size: 1.3em;
                    }
                /* When the menu is toggled, display the links */
                header nav ul.show {
                    display: flex;
                }
            /* Adjust the sidebar and main content on mobile */
            .sidebar {
                width: 100%;
                margin-right: 0;
                margin-bottom: 20px;
            }

            .dashboard-main {
                width: 100%;
            }
        }

        /* Large Screens */
        @@media (min-width: 769px) {
            header .menu-toggle {
                display: none;
            }
            /* Prevent sidebar from overflowing */
            .container {
                max-width: 100vw;
                overflow-x: hidden;
            }

            .sidebar {
                width: 10%;
            }

            .dashboard-main {
                width: 80%;
            }
        }

    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <h1>Teacher Dashboard</h1>
            <nav>
                <ul>

                    <!-- <li><a href="logout.html">Logout</a></li>-->
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container dashboard-container">
        <!-- Sidebar -->
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>Quick Links</h2>
            <ul>
                <li><a asp-controller="Teacher" asp-action="TeacherDashbord">Home</a></li>
                <li><a asp-controller="Teacher" asp-action="TeacherProfile">Profile</a></li>
                <li><a asp-controller="Teacher" asp-action="AddCourses">Add Courses</a></li>
                <li><a asp-controller="Home" asp-action="Logout">Logout</a></li>
            </ul>
        </aside>

        <!-- Main Content Section -->
        <main class="dashboard-main">
            <section class="profile-page-area section-gap" style="background-image: url('img/video-area-bg.png'); background-size: cover; background-position: center; padding: 120px 0; color: white;">
                <div class="container">
                    <div class="row">
                        <!-- Left Column: Profile Picture -->
                        <div class="col-lg-4">
                            <div class="profile-card text-center" style="padding:40px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); border-radius: 12px; background-color: rgba(4, 9, 30, 0.9);">
                                <!-- Fixed size square image -->
                                <img src="@(Model.ProfilePicture != null
    ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.ProfilePicture)}"
    : "/path/to/default/profile-picture.jpg")"
                                     alt="Profile Picture"
                                     style="width: 150px; height: 150px;" />
                                <div class="form-group" style="margin-bottom: 20px;">
                                    <form asp-action="UploadProfilePictureStudents" asp-controller="Teacher" method="post" enctype="multipart/form-data">
                                        <div class="form-group" style="margin-bottom: 20px;">
                                            <label for="profile-pic" style="font-size: 24px; color: white;">Profile Picture</label>
                                            <input type="file" class="form-control" id="profile-pic" name="ProfilePicture" accept="image/*" style="font-size: 18px; padding: 1px 1px;">
                                        </div>
                                 <button style ="background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%); border: none;"
                                 type="submit" class="btn btn-primary">Upload</button>                                    </form>              
                                    <h3 style="font-size: 32px; color: white;">@Model.FirstName @Model.LastName</h3>
                                <button class="btn primary-btn mt-4" id="edit-profile-btn" style="font-size: 20px; padding: 14px 35px; background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%); border: none; color: white; border-radius: 6px;">Edit Profile</button>
                            </div>
                        </div>
                        <!-- Right Column: Profile Details -->
                        <div class="col-lg-8">
                            <div class="profile-details" style="padding-left: 30px; background-color: rgba(4, 9, 30, 0.9); border-radius: 12px; padding: 40px; min-height: 500px; margin-top: 20px;">
                                <h4 class="mb-4" style="font-size: 28px; font-weight: bold; color: white;">Profile Details</h4>
                                <ul class="list-unstyled" id="profile-info" style="font-size: 18px; line-height: 2.5; color: white;">
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">First Name:</strong> @Model.FirstName </li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Last Name:</strong> @Model.LastName </li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Email:</strong> @Model.Email</li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Phone:</strong> @Model.PhoneNumber</li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Major:</strong> @Model.Major</li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Desc:</strong> @Model.Desc</li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">Qualification Courses:</strong> @Model.QualificationCourses</li>
                                    <li style="margin-bottom: 20px;"><strong style="font-size: 22px;">GPA:</strong> @Model.GPA</li>

                                </ul>
                                <!-- Edit Profile Form (Initially hidden but with consistent height) -->
                                    <form asp-controller="Teacher" asp-action="EditProfile" id="edit-profile-form" style="display:none; font-size: 18px; margin-top: 20px;">
                                        <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="name" style="font-size: 24px; color: white;">First Name</label>
                                            <input type="text" class="form-control" id="name" value="@Model.FirstName" name="FirstName" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="name" style="font-size: 24px; color: white;">Last Name</label>
                                            <input type="text" class="form-control" id="name" value="@Model.LastName" name="LastName" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="email" style="font-size: 24px; color: white;">Email</label>
                                            <input type="email" class="form-control" id="email" value="@Model.Email" name="Email" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="phone" style="font-size: 24px; color: white;">Phone</label>
                                            <input type="text" class="form-control" id="phone" value="@Model.PhoneNumber" name="PhoneNumber" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;">Major</label>
                                            <input type="text" class="form-control" id="address" value="@Model.Major" name="Major" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;">Level</label>
                                            <input type="text" class="form-control" id="address" value="@Model.Level" name="Level" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;">Student ID</label>
                                            <input type="text" class="form-control" id="address" value="@Model.StudentId" name="StudentId" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;">Desc</label>
                                            <input type="text" class="form-control" id="address" value="@Model.Desc" name="Desc" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;"> Qualification Courses </label>
                                            <input type="text" class="form-control" id="address" value="@Model.QualificationCourses" name="QualificationCourses" style="font-size: 18px; padding: 12px 15px;">
                                    </div>
                                    <div class="form-group" style="margin-bottom: 20px;">
                                        <label for="address" style="font-size: 24px; color: white;">Gpa</label>
                                            <input type="text" class="form-control" id="address" value="@Model.GPA" name="GPA" style="font-size: 18px; padding: 12px 15px;">
                                    </div>

                                        <button type="submit" class="btn primary-btn mt-4" style="font-size: 20px; padding: 12px 30px; background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%); border: none; color: white; border-radius: 6px;">Save Changes</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
      
        </main>
    </div>

    <!-- Footer -->
  

</body>

</html>

