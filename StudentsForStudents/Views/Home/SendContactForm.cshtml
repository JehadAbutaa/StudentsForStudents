	<style>
	.contact-section {
    padding: 60px 0;
    background-color: rgb(255, 255, 255);
    text-align: center;
}

.contact-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap; /* Ensures the content wraps on smaller screens */
}

.contact-image {
    max-width: 450px;
    height: auto;
    flex-shrink: 0;
    margin-bottom: 50px; /* For spacing on smaller screens */
}

.form-container {
    max-width: 600px;
    text-align: left;
    width: 100%;
}

.contact-form .form-group {
    margin-bottom: 20px;
}

.contact-form label {
    display: block;
    font-size: 1rem;
    color: #333;
    margin-bottom: 5px;
    text-align: left;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 12px;
    font-size: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
}

.contact-form input:focus,
.contact-form textarea:focus {
    outline: none;
    border-color: #7c32ff;
}

.contact-form button {
    background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
    color: white;
    border: none;
    padding: 12px 20px;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.contact-form button:hover {
    background: linear-gradient(90deg, #c738d8 0%, #7c32ff 100%);
}

.contact-form button:focus {
    outline: none;
}

/* Responsive adjustments */
@@media (max-width: 768px) {
    .contact-container {
        flex-direction: column;
        align-items: center; /* Center content on small screens */
    }

    .contact-image {
        max-width: 250px; /* Make image smaller on smaller screens */
    }

    .form-container {
        width: 90%; /* Make the form take more space on small screens */
    }
}


