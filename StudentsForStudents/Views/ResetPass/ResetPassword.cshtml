@model ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Gradient section and sticky logo */
        .top-gradient {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            padding: 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .top-gradient .logo img {
                width: 100px;
                height: auto;
                margin-left: 24px;
            }

        /* Center alignment for the form */
        .h-custom {
            min-height: calc(100vh - 140px); /* Accounts for header and footer height */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Sticky footer */
        .footer {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            color: white;
            padding: 20px;
            position: sticky;
            bottom: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>

    <!-- Top gradient section with sticky logo -->
    <div class="top-gradient d-flex align-items-center justify-content-between">
        <a href="index.html" class="logo">
            <img src="https://i.postimg.cc/mrnnbFDf/LogoSFS1.png" alt="Logo">
        </a>
    </div>

    <!-- Main content section -->
    <section class="h-custom">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <!-- Form Section -->
                <div class="col-md-6">
                    <form asp-action="ResetPassword" method="post">
                        <h2 class="text-center mb-4">Reset Password</h2>
                        <div class="form-outline mb-4">
                            <input name="Email" type="text" id="email" class="form-control form-control-lg"
                                   placeholder="Enter your Email" required />
                            <label class="form-label" for="new-password"></label>
                        </div>
                        <!-- New Password input -->
                        <div class="form-outline mb-4">
                            <input name="Password" type="password" id="new-password" class="form-control form-control-lg"
                                   placeholder="Enter your new password" required />
                            <label class="form-label" for="new-password">New Password</label>
                        </div>

                        <!-- Re-enter Password input -->
                        <div class="form-outline mb-4">
                            <input name="ConfirmPassword" type="password" id="re-enter-password" class="form-control form-control-lg"
                                   placeholder="Re-enter your new password" required />
                            <label class="form-label" for="re-enter-password">Re-enter Password</label>
                        </div>

                        <!-- Reset button -->
                        <div class="text-center mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem; background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%); border: none;">
                                Reset Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Bottom gradient section -->
    <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-3 px-4 px-xl-5"
         style="background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
       position: fixed;
       bottom: 0;
       left: 0;
       right: 0;
       z-index: 1000;">
        <span style="color: white; margin-left: 10px;">Student For Student</span>
        <span style="color: white; margin-left: 10px;">Support: StudentForStudent@gmail.com</span>
        <span style="color: white; margin-left: 10px;">Phone Number: +962 7000 0000</span>
        <span style="color: white; margin-left: 10px;">University of Petra</span>
    </div>




</body>
</html>
