@model IEnumerable<StudentsForStudents.Models.Courses>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Control</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }

        .management-section h3 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .management-section table {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #1E90FF;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0066cc;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mb-4">Course Control</h1>
        <div class="management-section">
            <h3>Courses Management</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th>Course picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="@(item.CourcePicture != null
    ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.CourcePicture)}"
    : "/path/to/default/profile-picture.jpg")"
                                 alt="Profile Picture"
                                 style="width: 150px; height: 150px;" />
                            </td>
                        <td>
                                <a asp-controller="Admin" asp-action="GetEditCource" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-controller="Admin" asp-action="DeleteCourceV" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <a asp-controller="Admin" asp-action="AddCource" class="btn btn-primary">Add New Course</a>
        </div>
        <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
</body>

</html>
