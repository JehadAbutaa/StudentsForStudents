<!-- ================ Start Add Course Area ================= -->
<section class="add-course-area section-gap">
    <div class="container">
        
        <form id="add-course-form">
            <!-- Course Name -->
            <div class="form-group">
                <label for="course-name">Course Name:</label>
                <input type="text" class="form-control" id="course-name" placeholder="Enter the course name" required>
            </div>

            <!-- Course Description -->
            <div class="form-group">
                <label for="course-description">Course Description:</label>
                <textarea class="form-control" id="course-description" rows="5" placeholder="Provide a brief description of the course" required></textarea>
            </div>

            <!-- Select Faculty -->
            <div class="form-group">
                
                <select class="form-control" id="faculty" required>
                    <option value="" disabled selected>Select a faculty</option>
                    <option value="Information Technology">Information Technology</option>
                    <option value="Engineering and Technology">Engineering and Technology</option>
                    <option value="Science">Science</option>
                    <option value="Business and Economics">Business and Economics</option>
                    <option value="Arts and Humanities">Arts and Humanities</option>
                    <option value="Law">Law</option>
                </select>
            </div>
            <br>
            <br>
            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit Course for Approval</button>
            </div>
        </form>

        <!-- Confirmation Message -->
        <div id="confirmation-message" class="alert alert-success mt-4" style="display: none;">
            Your course submission is waiting for approval!
        </div>
    </div>
</section>
<!-- ================ End Add Course Area ================= -->

<script>
    // JavaScript for handling form submission
    document.getElementById("add-course-form").addEventListener("submit", function (e) {
        e.preventDefault(); // Prevent the default form submission

        // Show confirmation message
        document.getElementById("confirmation-message").style.display = "block";

        // Clear form fields
        document.getElementById("course-name").value = "";
        document.getElementById("course-description").value = "";
        document.getElementById("faculty").value = "";
    });
</script>


