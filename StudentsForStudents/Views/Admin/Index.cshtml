@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="zxx" class="no-js">

<head>
    <style>
        /* Flexbox layout for the sidebar and content */
        .container-fluid {
            display: flex;
            padding: 0;
        }

        .row {
            display: flex;
            width: 100%;
        }

        .sidebar {
            background-color: #f8f9fa;
            padding: 20px;
            border-right: 1px solid #dee2e6;
            height: 100vh;
            position: fixed;
            top: 0;
            width: 250px;
        }

        .content {
            margin-left: 250px; /* Match the sidebar width */
            padding: 20px;
            flex-grow: 1;
        }

        /* Main content adjustments for responsive behavior */
        @@media (max-width: 768px) {
            .container-fluid {
                flex-direction: column;
            }

            .sidebar {
                position: relative;
                height: auto;
                width: 100%;
                border-right: none;
            }

            .content {
                margin-left: 0;
            }
        }

        /* Sidebar styling */
        .sidebar h4 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .sidebar ul li a {
            color: #333;
            text-decoration: none;
            font-size: 16px;
            margin-left: 10px;
        }

        .sidebar ul li a:hover {
            color: #1E90FF;
        }

        .sidebar ul li i {
            font-size: 18px;
            color: #555;
        }

        /* Main content adjustments */
        .management-section {
            margin-top: 30px;
        }

        /* Dashboard Welcome Styling */
        .dashboard-overview h2 {
            font-size: 28px;
            font-weight: bold;
        }

        .dashboard-overview p {
            font-size: 18px;
            color: #555;
        }

        /* Navbar adjustments */
        .navbar {
            padding: 10px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar .navbar-nav li a {
            margin-right: 15px;
            font-size: 16px;
            color: #555;
        }

        .navbar .navbar-nav li a:hover {
            color: #1E90FF;
        }

        /* Table styling */
        .table {
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #1E90FF;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0066cc;
        }

        /* Logo styling */
        .navbar-brand {
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            margin-right: 10px;
            width: 80px;
            height: auto;
        }
    </style>
    <!-- Meta Information -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="Student For Student" />
    <meta charset="UTF-8" />
    <title>Admin Dashboard - Student For Student</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:900|Roboto:400,500,700" rel="stylesheet" />

    <!-- CSS Dependencies -->
    <link rel="stylesheet" href="~/AdminTheme/css/bootstrap.css">
    <link rel="stylesheet" href="~/AdminTheme/css/font-awesome.min.css">
</head>

<body>
    <!-- Header Area -->
    <header class="default-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/AdminTheme/img/logo.png" alt="Student For Student Logo" style="width: 150px; height: auto;">
                    <span>Student For Student</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                        <li><a asp-controller="Admin" asp-action="CoursesManagement">Manage Courses</a></li>
                        <li><a asp-controller="Admin" asp-action="StdManagement">Manage Students</a></li>
                        <li><a asp-controller="Admin" asp-action="TeacherManagement">Manage Teachers</a></li>
                        <li><a  asp-controller="Admin" asp-action="CalendarManagement">Manage Calendar</a></li>
                        <li><a  asp-controller="Admin" asp-action="TeacherReq">Teacher requiste</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Dashboard Section -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar">
                <h4>Admin Panel</h4>
                <ul>
                    <li><i class="fa fa-tachometer"></i><a asp-controller="Admin" asp-action="Index">Dashboard Overview</a></li>
                    <li><a asp-controller="Admin" asp-action="StdManagement">Manage Students</a></li>
                    <li><a asp-controller="Admin" asp-action="TeacherManagement">Manage Teachers</a></li>
                    <li><i class="fa fa-book"></i><a asp-controller="Admin" asp-action="CoursesManagement">Courses Control</a></li>
                    <li><i class="fa fa-calendar"></i><a asp-controller="Admin" asp-action="CalendarManagement">Calendar Management</a></li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="content">
                <div class="dashboard-overview" style="margin-top: 20px;">
                    <h2>Welcome, Administrator</h2>
                    <p>Here you can manage users, courses, and more.</p>
                </div>

                <!-- Course Management -->
                <div class="management-section">
                    <h3>Courses Management</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Course Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Introduction to Python</td>
                                <td>Programming</td>
                                <td>$50</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="#" class="btn btn-primary">Add New Course</a>
                </div>
    
                <!-- User Management -->
                <div class="management-section">
                    <h3>Users Management</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Student 1</td>
                                <td>john.doe@example.com</td>
                                <td>Student</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <a asp-controller="Admin" asp-action="StdManagement">View All Student</a>
                </div>

                <div class="management-section">
                    <h3>Users Management</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>John Doe</td>
                                <td>john.doe@example.com</td>
                                <td>Teacher</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <a asp-controller="Admin" asp-action="TeacherManagement">View All Teachers</a>
                </div>
    
              
    
                <!-- Calendar Management -->
                <div class="management-section">
                    <h3>Calendar</h3>
                    <div id="calendar"></div>
                    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
                    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />
                    <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        var calendarEl = document.getElementById('calendar');
                        var calendar = new FullCalendar.Calendar(calendarEl, {
                            initialView: 'dayGridMonth',
                            events: [
                                {
                                    title: 'Event 1',
                                    start: '2023-12-01'
                                },
                                {
                                    title: 'Event 2',
                                    start: '2023-12-05',
                                    end: '2023-12-07'
                                }
                            ]
                        });
                        calendar.render();
                    });
                    </script>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="footer-bottom row align-items-center">
                <p class="footer-text text-center m-0">&copy; <script>document.write(new Date().getFullYear());</script> Student For Student. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JS Dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
