@model StudentsForStudents.Models.Teacher
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
   
    <style>
   /* General Styles */
   body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    
    
}

/* Header Styling */
header {
    background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
    color: white;
    padding: 20px;
    text-align: center;
    position: relative;
    width: 100%; 
}

header h1 {
    margin: 0;
}

header nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: center;
    margin: 0;
}

header nav ul li {
    display: inline;
    margin-right: 15px;
}

header nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.1em;
}

header nav ul li a:hover {
    color: #fff;
    text-decoration: underline;
}

/* Mobile Navbar (Hamburger Menu) */
header .menu-toggle {
    display: none;
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 2em;
    cursor: pointer;
}

header nav ul {
    display: flex;
}

header nav ul li {
    margin: 0 15px;
}

header nav ul li a {
    font-size: 1.1em;
}

/* Footer Styling */
footer {
    background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
    color: white;
    text-align: center;
    padding: 10px;
    
    width: 101%; /* Ensure footer takes full width */
    margin-bottom: auto;
}

/* Dashboard Layout */
.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 20px;
}

.dashboard-container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

/* Sidebar Styling */
.sidebar {
    width: 20%;
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-right: 20px; /* Prevent content from touching sidebar */
}

.sidebar h2 {
    color: #7c32ff;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin: 15px 0;
}

.sidebar ul li a {
    color: #333;
    text-decoration: none;
    font-size: 1.1em;
}

.sidebar ul li a:hover {
    color: #7c32ff;
}

/* Main Content Styling */
.dashboard-main {
    width: 75%;
}

.dashboard-main h2 {
    color: #7c32ff;
}

/* Courses Section */
.courses-section ul {
    list-style: none;
    padding: 0;
}

.courses-section ul li {
    background-color: #fff;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Appointments Table */
.appointments-table {
    width: 100%;
    margin-top: 20px;
    border-collapse: collapse;
}

.appointments-table, th, td {
    border: 1px solid #ddd;
}

th, td {
    padding: 10px;
    text-align: center;
}

th {
    background-color: #7c32ff;
    color: white;
}

.cancel-btn {
    background-color: #e74c3c;
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.cancel-btn:hover {
    background-color: #c0392b;
}

/* Schedule Form Styling */
.schedule-form input {
    display: block;
    margin: 10px 0;
    padding: 10px;
    width: 70%;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.schedule-form button {
    
    background: linear-gradient(390deg, #7c32ff 0%, #c738d8 100%);
    color: white;
    cursor: pointer;
    padding: 10px 20px;
    
}

.schedule-form button:hover {
    background-color: #5b26cc;
}

/* Responsive Styles */

/* Mobile View */
@@media (max-width: 768px) {
    header h1 {
        font-size: 1.5em;
    }

    /* Show the menu toggle (hamburger) icon */
    header .menu-toggle {
        display: block;
    }

    /* Stack the menu items vertically */
    header nav ul {
        display: none;
        flex-direction: column;
        background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
        position: absolute;
        top: 60px;
        right: 0;
        width: 100%;
        padding: 20px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }

    header nav ul li {
        margin: 10px 0;
        text-align: center;
    }

    header nav ul li a {
        font-size: 1.3em;
    }

    /* When the menu is toggled, display the links */
    header nav ul.show {
        display: flex;
    }

    /* Adjust the sidebar and main content on mobile */
    .sidebar {
        width: 100%;
        margin-right: 0;
        margin-bottom: 20px;
    }

    .dashboard-main {
        width: 100%;
    }
}

/* Large Screens */
@@media (min-width: 769px) {
    header .menu-toggle {
        display: none;
    }

    /* Prevent sidebar from overflowing */
    .container {
        max-width: 100vw;
        overflow-x: hidden;
    }

    .sidebar {
        width: 10%;
    }

    .dashboard-main {
        width: 80%;
    }
}

    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <h1>Teacher Dashboard</h1>
            <nav>
                <ul>
                    
                   <!-- <li><a href="logout.html">Logout</a></li>--> 
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>Quick Links</h2>
            <ul>
                <li><a asp-controller="Teacher" asp-action="TeacherDashbord">Home</a></li>
                <li><a asp-controller="Teacher" asp-action="TeacherProfile">Profile</a></li>
                <li><a asp-controller="Teacher" asp-action="AddCourses">Add Courses</a></li>
                <li><a asp-controller="Home" asp-action="Logout">Logout</a></li>
            </ul>
        </aside>

        <!-- Main Content Section -->
        <main class="dashboard-main">
            <section class="courses-section">
                <h2>Your Courses</h2>
                <ul class="courses-list">
                    @foreach (var course in Model.InrolmentCourses)
                    {
                        <li>@course.Name</li>
                    }
                    <li>Mathematics 101</li>
                    <li>Physics 202</li>
                    <li>Computer Science 301</li>
                    <li>Chemistry 104</li>
                </ul>
            </section>

            <section class="appointments-section">
                <h2>Upcoming Appointments</h2>
                <table class="appointments-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Student</th>
                            <th>Subject</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2024-12-20</td>
                            <td>10:00 AM</td>
                            <td>omar faraj</td>
                            <td>Mathematics</td>
                            <td><button class="cancel-btn">Cancel</button></td>
                        </tr>
                        <tr>
                            <td>2024-12-22</td>
                            <td>2:00 PM</td>
                            <td>muhannad zaidan</td>
                            <td>Physics</td>
                            <td><button class="cancel-btn">Cancel</button></td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <section class="schedule-section">
                <h2>Manage Schedule</h2>
                <form action="add_schedule.php" method="POST" class="schedule-form">
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" required>

                    <label for="time">Time:</label>
                    <input type="time" id="time" name="time" required>

                    <label for="subject">Course/Subject:</label>
                    <input type="text" id="subject" name="subject" required>

                    <button type="submit">Add Schedule</button>
                </form>
            </section>
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 "Student For Student" Platform.</p>
    </footer>
    <script>
        const menuToggle = document.querySelector('.menu-toggle');
        const navMenu = document.querySelector('header nav ul');
    
        menuToggle.addEventListener('click', () => {
            navMenu.classList.toggle('show');
        });
    </script>
    
</body>

</html>
