@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }

        .request-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-accept {
            background-color: #28a745;
            color: white;
        }

        .btn-decline {
            background-color: #dc3545;
            color: white;
        }

        .btn-accept:hover {
            background-color: #218838;
        }

        .btn-decline:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mb-4">Course Requests</h1>

        <!-- Example of a Course Request -->
        <div class="request-card">
            <h4>Course Title: Introduction to Python</h4>
            <p>Requested by: John Doe</p>
            <p>Description: A beginner-friendly course to learn Python programming.</p>

            <div class="text-right">
                <button class="btn btn-accept mr-2">Accept</button>
                <button class="btn btn-decline">Decline</button>
            </div>
        </div>

        <!-- Add more request cards as needed -->
        <div class="request-card">
            <h4>Course Title: Advanced Machine Learning</h4>
            <p>Requested by: Jane Smith</p>
            <p>Description: A comprehensive guide to advanced machine learning techniques.</p>

            <div class="text-right">
                <button class="btn btn-accept mr-2">Accept</button>
                <button class="btn btn-decline">Decline</button>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="index.html" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    <script>
        // Example JavaScript to handle button clicks
        document.querySelectorAll('.btn-accept').forEach(button => {
            button.addEventListener('click', () => {
                alert('Course Accepted!');
            });
        });

        document.querySelectorAll('.btn-decline').forEach(button => {
            button.addEventListener('click', () => {
                alert('Course Declined!');
            });
        });
    </script>
</body>

</html>
