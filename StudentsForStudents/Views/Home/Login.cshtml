@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style> 
    /* Gradient section and sticky logo */
    .top-gradient {
      background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
      padding: 20px;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .top-gradient .logo img {
      width: 100px;
      height: auto;
      margin-left: 24px;
    }

    /* Height adjustments */
    .h-custom {
      height: calc(100% - 73px);
    }

    /* Styling for the image */
    .login-image {
      width: 100%;
      max-width: 600px;
      height: 400px;
      
    }

    /* Responsive adjustments */
    @@media (max-width: 767px) {
      .login-image {
        max-width: 100%;
        height: auto;
      }
      .h-custom {
        height: 100%;
      }
    }

    /* Bottom gradient section */
    .bottom-gradient {
      background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 10px 20px;
    }
    .bottom-gradient span {
      color: white;
      margin-left: 10px;
    }

  </style>
</head>
<body>

  <!-- Top gradient section with sticky logo -->
  <div class="top-gradient d-flex align-items-center justify-content-between">
    <a href="index.html" class="logo">
      <img src="https://i.postimg.cc/mrnnbFDf/LogoSFS1.png" alt="Logo">
    </a>
  </div>

  <!-- Main content section -->
  <section class="vh-100">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <!-- Image section on the left side for desktop -->
        <div class="col-md-5 d-none d-md-block">
          <img src="https://i.postimg.cc/4yKgN5fG/study.png" alt="study" class="login-image">
        </div>

        <!-- Form section on the right side -->
        <div class="col-md-6 col-lg-4 col-xl-4 offset-xl-1">
                    <form asp-controller="Home" asp-action="Login" method="post">
                         @if (TempData["messageLogin"] != null)
                    {
                        
                        <div class="alert alert-success" role="alert">
                            @TempData["messageLogin"]
                        </div>
                    }
                    @if (TempData["successRegister"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["successLogin"]
                        </div>
                    }
                    @if (TempData["errorLogin"] != null)
                    {
                        <div class="alert alert-danger">@TempData["errorLogin"]</div>
                    }
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
              <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
              <input name="Email" type="email" id="form3Example3" class="form-control form-control-lg" placeholder="Enter a valid email address" />
              <label class="form-label" for="form3Example3">Email address</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
              <input name="Password" type="password" id="form3Example4" class="form-control form-control-lg" placeholder="Enter password" />
              <label class="form-label" for="form3Example4">Password</label>
            </div>

            <!-- Forgot password link -->
            <div class="d-flex justify-content-between align-items-center">
              <a asp-controller="ResetPass" asp-action="EmailToBeChange"
               class="text-body" style="margin-right: -20px;">Forgot password?</a>
            </div>

            <!-- Login button -->
            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem; background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%); border: none;">
                Login  
              </button>
              <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? 
                <a     asp-controller="Home" asp-action="Register"
                  style="color: #000080;">Register</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

   <!-- Bottom gradient section -->
<div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-3 px-4 px-xl-5"
style="background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
       position: fixed;
       bottom: 0;
       left: 0;
       right: 0;
       z-index: 1000;">
<span style="color: white; margin-left: 10px;">Student For Student</span>
<span style="color: white; margin-left: 10px;">Support: StudentForStudent@gmail.com</span>
<span style="color: white; margin-left: 10px;">Phone Number: +962 7000 0000</span> 
<span style="color: white; margin-left: 10px;">University of Petra</span>
</div>

</body>
</html>




   

