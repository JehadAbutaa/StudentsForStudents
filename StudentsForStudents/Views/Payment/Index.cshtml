@{

    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Moyasar Styles -->
    <link rel="stylesheet" href="https://cdn.moyasar.com/mpf/1.14.0/moyasar.css" />

    <!-- Moyasar Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/polyfill/7.12.1/polyfill.min.js"></script>
    <script src="https://cdn.moyasar.com/mpf/1.14.0/moyasar.js"></script>

    <style>

        /* Gradient section and sticky logo */

        .top-gradient {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            padding: 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .top-gradient .logo img {
                width: 100px;
                height: auto;
                margin-left: 24px;
            }

        /* Bottom gradient section */

        .bottom-gradient {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 10px 20px;
        }

            .bottom-gradient span {
                color: white;
                margin-left: 10px;
            }

        /* Payment form and image container */

        .payment-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
        }

        .payment-image {
            width: 100%;
            max-width: auto;
            height: auto;
            margin-right: -300px;
        }
    </style>
</head>
<body>

    <!-- Top gradient section with sticky logo -->
    <div class="top-gradient d-flex align-items-center justify-content-between">
        <a href="index.html" class="logo">
            <img src="https://i.postimg.cc/mrnnbFDf/LogoSFS1.png" alt="Logo">
        </a>
    </div>

    <!-- Main content section -->
    <div class="container payment-container">
        <!-- Left-side image -->
        <div class="image-section">
            <img src="https://i.postimg.cc/x8v6cNg0/payment.png" alt="payment1 image" class="payment-image">
        </div>

        <!-- Right-side payment form -->
        <div>
            <h1 class="mb-4">Payment Page</h1>
            <div class="mysr-form"></div>
        </div>
    </div>

    <!-- Bottom gradient section -->
    <div class="bottom-gradient d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-3 px-4 px-xl-5">
        <span style="color: white; margin-left: 10px;">Student For Student</span>
        <span style="color: white; margin-left: 10px;">Support: StudentForStudent@gmail.com</span>
        <span style="color: white; margin-left: 10px;">Phone Number: +962 7000 0000</span>
        <span style="color: white; margin-left: 10px;">University of Petra</span>
    </div>

    <script>

        Moyasar.init({

            element: '.mysr-form',

            amount: 5000, // Amount in the smallest unit (e.g., 50.00 JOD = 5000)

            currency: 'JOD',

            description: 'GEN AI Course',

            publishable_api_key: 'pk_test_AQpxBV31a29qhkhUYFYUFjhwllaDVrxSq5ydVNui',

            callback_url: 'https://moyasar.com/thanks',

            methods: ['creditcard']

        });
    </script>
</body>
</html>

