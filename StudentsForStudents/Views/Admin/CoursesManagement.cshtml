@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Control</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }

        .management-section h3 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .management-section table {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #1E90FF;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0066cc;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mb-4">Course Control</h1>
        <div class="management-section">
            <h3>Courses Management</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Course Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Introduction to Python</td>
                        <td>Programming</td>
                        <td>$50</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-warning">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Web Development Basics</td>
                        <td>Web Design</td>
                        <td>$75</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-warning">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a href="#" class="btn btn-primary">Add New Course</a>
        </div>
        <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
</body>

</html>
