    <style>
        /* Teacher Card */
        .teacher-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* More pronounced shadow */
            overflow: hidden;
            position: relative;
            max-width: 800px;
            margin: 20px auto;
            display: flex;
            height: auto;
            padding: 50px;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        }

            /* Teacher Card Hover */
            .teacher-card:hover {
                transform: translateY(-10px); /* Card lifts slightly */
                box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
                background-color: #f8f8f8; /* Subtle background change */
            }

        /* Teacher Image */
        .teacher-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
            margin-right: 25px;
            transition: transform 0.3s ease;
        }

        /* Teacher Image Hover */
        .teacher-card:hover .teacher-image {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

        /* Teacher Info Section */
        .teacher-info {
            flex-basis: 60%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Teacher Name */
        .teacher-name {
            font-size: 2em;
            margin: 0;
            color: #333;
            font-weight: 300;
            text-transform: uppercase;
        }

        /* Teacher Description */
        .teacher-description {
            font-size: 1.2em;
            margin: 10px 0;
            color: #555;
            line-height: 1.5;
            max-height: 80px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        /* Teacher Rating */
        .teacher-rating {
            font-size: 1.1em;
            color: #f39c12;
            margin-bottom: 15px;
            font-weight: bold;
        }

        /* Chat Button */
        .chat-btn {
            background: linear-gradient(90deg, #7c32ff 0%, #c738d8 100%);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 12px 20px;
            font-size: 1.3em; /* Slightly larger text */
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            transition: opacity 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

            /* Chat Button Hover */
            .chat-btn:hover {
                opacity: 0.9;
                transform: scale(1.1) translateY(-50%); /* Button grows slightly */
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); /* Slight shadow on hover */
            }

        /* Hover Effect for Card (Entire Card) */
        .teacher-card:hover .chat-btn {
            opacity: 1; /* Button becomes more prominent on hover */
            transform: scale(1.1) translateY(-50%);
        }

        .star-rating {
            font-size: 30px;
            color: #fdd835; /* Default star color (gray) */
        }

        .star-filled {
            color: #fdd835; /* Filled star color (yellow) */
        }
    </style>
