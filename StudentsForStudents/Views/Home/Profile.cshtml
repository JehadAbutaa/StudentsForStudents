@model StudentsForStudents.Models.Student
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
    <style>
        /* Profile Section improvements */
        .profile-page-area {
            margin-top: 50px; /* Move the section up slightly */
        }

        .profile-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            background-color: #fff;
        }

            .profile-card img {
                border-radius: 50%;
                width: 150px;
                height: 150px;
            }

            .profile-card h3 {
                font-size: 24px;
                font-weight: 600;
            }

            .profile-card p {
                color: #777;
            }

        .profile-details {
            padding-left: 0;
        }

            .profile-details ul li {
                margin-bottom: 10px;
                font-size: 16px;
            }

                .profile-details ul li strong {
                    color: #333;
                }

        /* Edit Profile Button */
        #edit-profile-btn {
            background-color: #1E90FF;
            color: white;
            font-weight: 600;
            border-radius: 5px;
            padding: 10px 20px;
            transition: background-color 0.3s ease;
        }

            #edit-profile-btn:hover {
                background-color: #0066cc;
            }

        /* Edit Profile Form */
        #edit-profile-form .form-group {
            margin-bottom: 15px;
        }

        #edit-profile-form .form-control {
            border-radius: 5px;
            padding: 10px;
        }

        #edit-profile-form button {
            background-color: #28a745;
            color: white;
            font-weight: 600;
            border-radius: 5px;
            padding: 10px 20px;
        }

            #edit-profile-form button:hover {
                background-color: #218838;
            }

    </style>
